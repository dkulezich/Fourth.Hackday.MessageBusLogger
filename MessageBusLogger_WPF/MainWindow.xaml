<Window x:Class="MessageBusLogger_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessageBusLogger_WPF"
        mc:Ignorable="d"
        Title="Message Bus Logger" Height="700" Width="900" MinWidth="900" MinHeight="700">
    <Grid Height="665" VerticalAlignment="Top">
        <Label x:Name="lblConnectionString" Content="Connection string:" HorizontalAlignment="Left" Margin="22,22,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnDisconnect" Content="Disconnect" Margin="752,27,0,617" HorizontalAlignment="Left" Width="114" Click="btnDisconnect_Click"/>
        <TextBox x:Name="txtConnectionStringListener" HorizontalAlignment="Left" Height="23" Margin="143,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="587" SelectionOpacity="1"/>
        <Button x:Name="btnSubscribe" HorizontalAlignment="Left" Margin="752,27,0,0" VerticalAlignment="Top" Width="114" RenderTransformOrigin="0.267,3.288" Click="btnSubscribe_Click" Height="20" Content="Connect"/>
        <GroupBox x:Name="groupFilters" Header="Filters" HorizontalAlignment="Left" Margin="10,56,0,492" Width="872">
            <Grid HorizontalAlignment="Left" Height="111" Margin="0,-9,-2,-12" VerticalAlignment="Top" Width="862">
                <Label x:Name="lblMessageType" Content="Message Type:" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top"/>
                <Button x:Name="btnGetMessages" Content="Get Messages" HorizontalAlignment="Left" Margin="738,75,0,0" VerticalAlignment="Top" Width="114" RenderTransformOrigin="1.729,1.728" Click="btnGetMessages_Click"/>
                <Label x:Name="lblSystem" Content="System:" HorizontalAlignment="Left" Margin="47,64,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.092,0.493"/>
                <ComboBox x:Name="cmbMessageType" Margin="114,23,0,0" HorizontalAlignment="Left" Width="216" Height="22" VerticalAlignment="Top"/>
                <ComboBox x:Name="cmbSourceSystem" HorizontalAlignment="Left" Margin="114,68,0,0" VerticalAlignment="Top" Width="216"/>
                <Label x:Name="lblStartDate" Content="From:" HorizontalAlignment="Left" Margin="364,20,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.511,-0.24"/>
                <Label x:Name="lblEndDate" Content="To:" HorizontalAlignment="Left" Margin="379,65,0,0" VerticalAlignment="Top"/>
                <DatePicker x:Name="pickerStartDate" HorizontalAlignment="Left" Margin="422,24,0,0" VerticalAlignment="Top" FirstDayOfWeek="Monday"/>
                <DatePicker x:Name="pickerEndDate" HorizontalAlignment="Left" Margin="422,65,0,0" VerticalAlignment="Top"/>
                <CheckBox x:Name="chbShowAll" Content="Show msg from all busses" HorizontalAlignment="Left" Margin="563,71,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.319,-3.879"/>
                <Label x:Name="lblMaxCount" Content="Count:" HorizontalAlignment="Left" Margin="563,20,0,0" VerticalAlignment="Top"/>
                <ComboBox x:Name="cmbMaxCount" HorizontalAlignment="Left" Margin="624,23,0,0" VerticalAlignment="Top" Width="96"/>
            </Grid>
        </GroupBox>
        <Grid x:Name="mainContainer" HorizontalAlignment="Left" Height="420" Margin="10,173,0,0" VerticalAlignment="Top" Width="872">
            <DataGrid x:Name="gridMessages" HorizontalAlignment="Left" Height="400" Margin="10,10,0,0" VerticalAlignment="Top" Width="425" MouseLeftButtonDown="gridMessages_MouseLeftButtonDown"/>
            <TextBox x:Name="txtFind" HorizontalAlignment="Left" Margin="453,10,0,387" TextWrapping="Wrap" Width="282"/>
            <Button x:Name="btnFind" Content="Find" HorizontalAlignment="Left" Margin="753,13,0,0" VerticalAlignment="Top" Width="98" RenderTransformOrigin="0.196,0.785"/>
            <RichTextBox x:Name="txtMessages" HorizontalAlignment="Left" Height="372" Margin="453,38,0,0" VerticalAlignment="Top" Width="398">
                <FlowDocument/>
            </RichTextBox>
            <GridSplitter HorizontalAlignment="Left" Height="100" Margin="440,129,0,0" VerticalAlignment="Top" Width="5"/>
        </Grid>
        <Label x:Name="lblResendString" Content="Connection string:" HorizontalAlignment="Left" Margin="22,613,0,0" VerticalAlignment="Top" Width="107"/>
        <TextBox x:Name="txtResendString" HorizontalAlignment="Left" Height="23" Margin="143,616,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="587"/>
        <Button x:Name="btnResendMessage" Content="Resend Message" HorizontalAlignment="Left" Margin="752,616,0,0" VerticalAlignment="Top" Width="114" Click="btnResendMessage_Click"/>

    </Grid>
</Window>
